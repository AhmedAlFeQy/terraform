import json
import boto3
def lambda_handler(event, context):
   
    ses = boto3.client('ses')

    body = """
	    Hello, There are some changes happend in state file please check it.
    """

    ses.send_email(
	    Source = 'ahmed.alfeqyy@gmail.com',  # source mail
	    Destination = {
		    'ToAddresses': [
			    'ahmed.alfeqyy@gmail.com'        # destination mail
		    ]
	    },
	    Message = {
		    'Subject': {
			    'Data': 'SES Demo',
			    'Charset': 'UTF-8'
		    },
		    'Body': {
			    'Text':{
				    'Data': body,
				    'Charset': 'UTF-8'
			    }
		    }
	    }
    )
    
    return {
        'statusCode': 200,
        'body': json.dumps('Successfully sent email from Lambda using Amazon SES')
    }